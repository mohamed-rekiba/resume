{
  "name": "resume",
  "version": "1.4.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "prebuild": "npm run update-meta",
    "update-meta": "node --experimental-strip-types scripts/update-meta.ts",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "format": "prettier --write \"src/**/*.{ts,scss,html}\" \"e2e/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.{ts,scss,html}\" \"e2e/**/*.ts\"",
    "pdf": "npx playwright test && echo 'PDF saved to e2e-results/resume.pdf'",
    "prepare": "husky"
  },
  "type": "module",
  "private": true,
  "packageManager": "npm@11.10.1",
  "dependencies": {
    "@angular/common": "^21.2.0",
    "@angular/compiler": "^21.2.0",
    "@angular/core": "^21.2.0",
    "@angular/forms": "^21.2.0",
    "@angular/platform-browser": "^21.2.0",
    "@angular/router": "^21.2.0",
    "js-yaml": "^4.1.1",
    "marked": "^17.0.3",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular/build": "^21.1.5",
    "@angular/cli": "^21.1.5",
    "@angular/compiler-cli": "^21.2.0",
    "@playwright/test": "^1.58.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.3.1",
    "angular-eslint": "21.2.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "pdf-parse": "^2.4.5",
    "prettier": "^3.8.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "8.56.1",
    "vitest": "^4.0.18"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "lint-staged": {
    "*.{ts,scss,html}": "prettier --write",
    "*.ts": "eslint --fix"
  }
}
